<h1>player: <%= @player.name %></h1>
<h1>coordinator: <%= @coordinator.name %></h1>
<h2>team: <%= @team.name %></h2>
<h3><%= @player.email %></h3>
<h3><%= @player.phone %></h3>

<p><%= link_to "Edit player", edit_team_coordinator_player_path(@team, @coordinator, @player) %></p>
<p><%= link_to "Delete player", team_coordinator_player_path(@team, @coordinator, @player),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to coordinator", team_coordinator_path(@team, @coordinator) %></p>
<p><%= link_to "Return to team", team_path(@team) %></p>

